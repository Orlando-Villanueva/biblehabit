{
  "project": {
    "name": "Delight Social Media Image",
    "type": "social_media_post",
    "platform": "facebook_post"
  },
  "canvas": {
    "width": 1200,
    "height": 630,
    "units": "px",
    "dpi": 72,
    "format": "PNG",
    "maxFileSize": "1MB"
  },
  "branding": {
    "appName": "Delight",
    "tagline": "Build Your Bible Reading Habit",
    "colorPalette": {
      "primary": {
        "orange": "#F97316",
        "blue": "#2563EB"
      },
      "supporting": {
        "lightBlue": "#DBEAFE",
        "lightOrange": "#FED7AA"
      },
      "text": {
        "dark": "#111827",
        "light": "#FFFFFF"
      }
    },
    "typography": {
      "fontFamily": "Inter, Instrument Sans, or similar sans-serif",
      "hierarchy": {
        "primary": {
          "text": "Delight",
          "weight": "bold",
          "size": "large"
        },
        "secondary": {
          "text": "Build Your Bible Reading Habit",
          "weight": "medium",
          "size": "medium"
        }
      }
    }
  },
  "layout": {
    "structure": "two_column",
    "leftColumn": {
      "content": ["app_name", "tagline"],
      "alignment": "left",
      "width": "50%"
    },
    "rightColumn": {
      "content": ["visual_elements"],
      "alignment": "center",
      "width": "50%"
    },
    "background": {
      "type": "gradient",
      "direction": "diagonal",
      "colors": ["#DBEAFE", "#FFFFFF"],
      "style": "subtle"
    }
  },
  "visualElements": {
    "required": [
      {
        "type": "icon",
        "subject": "bible_book",
        "style": "modern_illustration",
        "color": "#2563EB",
        "size": "medium"
      },
      {
        "type": "progress_indicator",
        "subject": "streak_chart",
        "style": "minimal_bars",
        "color": "#F97316",
        "size": "small"
      }
    ],
    "optional": [
      {
        "type": "decorative",
        "subject": "reading_progress",
        "style": "geometric_shapes",
        "colors": ["#F97316", "#2563EB"],
        "opacity": 0.1
      }
    ]
  },
  "designPrinciples": {
    "style": "clean_minimal",
    "tone": "professional_approachable",
    "mood": "motivational",
    "aesthetic": "modern_contemporary"
  },
  "contentHierarchy": [
    {
      "priority": 1,
      "element": "app_name",
      "text": "Delight",
      "treatment": "large_bold"
    },
    {
      "priority": 2,
      "element": "tagline",
      "text": "Build Your Bible Reading Habit",
      "treatment": "medium_regular"
    },
    {
      "priority": 3,
      "element": "visual_support",
      "description": "Bible and progress icons",
      "treatment": "supporting_graphics"
    }
  ],
  "technicalRequirements": {
    "readability": {
      "minTextSize": "16px",
      "contrast": "WCAG_AA",
      "legibleAtSmallSizes": true
    },
    "socialMediaOptimization": {
      "safeCropArea": {
        "top": 40,
        "bottom": 40,
        "left": 60,
        "right": 60
      },
      "darkModeCompatible": true,
      "platformVariations": [
        "facebook",
        "twitter",
        "linkedin",
        "whatsapp"
      ]
    }
  },
  "deliverables": {
    "primary": {
      "filename": "og-image.png",
      "dimensions": "1200x630",
      "format": "PNG"
    },
    "alternatives": [
      {
        "filename": "og-image-square.png",
        "dimensions": "1080x1080",
        "format": "PNG",
        "purpose": "Instagram"
      }
    ],
    "outputPath": "public/images/"
  },
  "designInstructions": {
    "doList": [
      "Use clean, modern typography",
      "Ensure text is readable at small preview sizes",
      "Maintain consistent brand colors",
      "Create visual hierarchy with size and color",
      "Include subtle progress/achievement elements",
      "Test visibility on both light and dark backgrounds"
    ],
    "avoidList": [
      "Cluttered layouts",
      "Fine details that won't show in previews",
      "Text smaller than 16px",
      "More than 3 main colors",
      "Complex illustrations",
      "Religious imagery that might be exclusionary"
    ]
  },
  "inspiration": {
    "keywords": [
      "habit tracking",
      "progress visualization",
      "clean app design",
      "motivational graphics",
      "reading apps",
      "spiritual growth"
    ],
    "styleReferences": [
      "Duolingo progress screens",
      "Habit tracking app interfaces",
      "Modern Bible app designs",
      "Clean SaaS landing pages"
    ]
  }
}